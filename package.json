{
  "name": "things",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun run --cwd packages/web dev",
    "build": "bun run --cwd packages/web build",
    "preview": "bun run --cwd packages/web preview",
    "test": "bun run --cwd packages/web test",
    "format": "biome format --write",
    "lint": "biome lint",
    "check": "biome check",
    "cli": "bun run packages/cli/index.ts",
    "cli:generate": "bun run --filter @things/cli generate",
    "cli:build": "bun run packages/cli/script/build.ts",
    "cli:build:single": "bun run packages/cli/script/build.ts --single",
    "db:studio": "bun run --filter @things/web db:studio",
    "db:clean": "bun run --filter @things/web db:clean",
    "db:seed": "bun run --filter @things/web db:seed",
    "db:generate": "bun run --filter @things/web db:generate",
    "db:push": "bun run --filter @things/web db:push"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/bun": "^1.3.6",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  }
}
